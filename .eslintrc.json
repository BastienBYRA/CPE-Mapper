{
  "root": true,
  "env": {
    "es2023": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-unused-vars": ["warn", { "args": "none", "ignoreRestSiblings": true }],
    "no-undef": "error",
    "no-console": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/",
    "node_modules/"
  ]
}
